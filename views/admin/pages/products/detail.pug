extends ../../layouts/default



block main
    link(rel='stylesheet', type='text/css', href='/admin/css/products/detailcopy.css')
    h1(class="page-title") Chi tiết sản phẩm
    div(class="body")
        if (product.thumbnail)
            div(class="mb-4 inner-image")
                img(
                    src=product.thumbnail 
                )
        div(class="inner-content")
            if(product.title)
                h3(class="mb-4") #{product.title}
            if(product.product_category_id)
                div(class="mb-4") Danh mục: #{productCategory.title}

            if(product.price)
                div(class="mb-4") Giá: <b>#{product.price}$</b>

            if(product.discountPercentage)
                div(class="mb-4") Giảm giá: <b>#{product.discountPercentage}%</b>

            if(product.stock)
                div(class="mb-4") Còn lại: <b>#{product.stock}</b>
            
            
            
            if(product.status)
                div(class="mb-4")
                    span Trạng thái: 
                    if (product.status === "active")
                        span(class ="badge badge-success") Hoạt động
                    else 
                        span(class ="badge badge-danger") Dừng hoạt động

            if(product.position)
                div(class="mb-4") Vị trí: <b>#{product.position}</b>
            
            if(product.description)
                div(class="mb-4") !{product.description}

            if(role.permissions.includes("products_edit"))
                a(
                    href=`${prefixAdmin}/products/edit/${product.id}`
                    class="btn btn-warning"
                ) Chỉnh sửa

    script(src="/admin/js/products.js") 