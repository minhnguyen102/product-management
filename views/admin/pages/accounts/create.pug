extends ../../layouts/default
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug

block main
    +alert-error(5000)
    +alert-succes(5000)
    if(role.permissions.includes("accounts_create"))
        h1(class="mb-4") Tạo mới tài khoản

        form(
            action =`${prefixAdmin}/accounts/create`
            method="POST"
            enctype="multipart/form-data"
        )
            div(class="form-group")
                label(for="fullname") Họ tên *
                input(
                    type="text"
                    class="form-control"
                    id="fullname"
                    name="fullname"
                    
                )
            div(class="form-group")
                label(for="email") Emai *
                input(
                    type="text"
                    class="form-control"
                    id="email"
                    name="email"
                    
                )
            div(class="form-group")
                label(for="password") Mật khẩu *
                input(
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    
                )
            div(
                class="form-group"
                upload-image
            )
                label(for="avatar") Avatar
                input(
                    type="file"
                    class="form-control-file"
                    id="avatar"
                    name="thumbnail"
                    accept="image/*"
                    upload-image-input
                )
                div(
                    class= "image-container"
                )
                    img(
                        src=""
                        upload-image-preview
                        class="image-preview"
                    )
                    button(id="button-close-image") X
            
            div(class="form-group")
                label(for="role_id") Phân quyền
                select(
                    name="role_id"
                    id="role_id"
                    class="form-control"
                )
                    option(disabled) -- Chọn --
                    each item in records
                        option(value=item.id) #{item.title}

            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked
                )
                label(for="statusActive" class="form-check-lable") Hoạt động 
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusInactive"
                    name="status"
                    value="inactive"
                )
                label(for="statusInactive" class="form-check-lable") Dừng hoạt động 
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Tạo mới
    else 
        div Bạn không có quyền tạo mới tài khoản